---
import Layout from "../layouts/Layout.astro";
const repo = Astro.url.searchParams.get("repo");

const text = repo?.split("/").slice(-2).join("/");
---

<Layout title="Loading... ">
    <main class="container center">
        <div>
            <h3>Fetching data for {text}</h3>
            <p>
                Please wait while we fetch the data for the repository.
            </p>
            <progress />
        </div>
    </main>
</Layout>

<style>
    .center {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }
</style>

<script define:vars={{text}}>
    setTimeout(() => {
        window.location.href = `/app/${text}/README.md`;
    }, 100);
</script>